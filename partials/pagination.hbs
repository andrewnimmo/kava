<nav id="pagination" class="pagination" role="pagination">
	<div class="inner">
	    {{#if prev}}
	        <a class="pagination-item pagination-next" href="{{page_url prev}}"><i class="icon-left-open-big"></i> <span>Newer Posts</span></a>
	    {{/if}}
	    <span class="pagination-info">Page {{page}} of {{pages}}</span>
	    {{#if next}}
	        <a class="pagination-item pagination-prev" href="{{page_url next}}"><span>Older Posts</span> <i class="icon-right-open-big"></i></a>
	    {{/if}}
	    <div class="clear"></div>
	</div>
</nav>
